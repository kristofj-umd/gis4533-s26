{
  "name": "Web Development",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-24.04",

  "customizations": {
    "vscode": {
      "extensions": [
        "ritwickdey.liveserver",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint"
      ],
      "settings": {
        "liveServer.settings.port": 5500
      }
    }
  },

  "forwardPorts": [5500],
  "portsAttributes": {
    "5500": {
      "label": "Live Server",
      "onAutoForward": "notify"
    }
  },
}
